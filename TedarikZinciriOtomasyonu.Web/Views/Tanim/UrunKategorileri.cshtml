@model List<TedarikZinciriOtomasyonu.VarlikKatmani.urunkategori>
@{
	ViewBag.Title = "Ürün Kategorileri";
}


<section class="content-header">
	<div class="header-icon">
		<i class="fa fa-group"></i>
	</div>
	<div class="header-title">
		<h1>Panel</h1>
		<small>Ürün Kategorileri</small>
	</div>
</section>
<section class="content">
	<div class="row">
		<div class="col-sm-12">
			<div class="panel panel-bd lobidrag">
				<div class="panel-heading">
					<div class="btn-group buttonexport">
						<a href="#">
							<h4>Kategori Detayları</h4>
						</a>
					</div>
				</div>
				<div class="panel-body">
					<div class="btn-group">
						<div class="buttonexport" id="buttonlist">
							<a class="btn btn-add" href="~/Tanim/UrunKategorisiEkle">
								<i class="fa fa-plus"></i> Kategori Ekle
							</a>
						</div>
					</div>
					<div class="table-responsive">
						<table id="dataTableExample1" class="table table-bordered table-striped table-hover">
							<thead>
								<tr>
									<th>Kategori Adı</th>
									<th>İşlemler</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var items in Model)
								{
									<tr>
										<td>@items.UrunKategoriAdi</td>
										<td>
											<a class="btn btn-add btn-sm" href="~/Tanim/UrunKategorisiDuzenle/@items.UrunKategoriID"><i class="fa fa-pencil"></i></a>
											<a class="btn btn-danger btn-sm" href="~/Tanim/UrunKategoriSil/@items.UrunKategoriID"><i class="fa fa-trash-o"></i> </a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>